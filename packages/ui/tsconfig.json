{
  "extends": "@archivist/config/react.tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@utils*" : [ "src/utils*" ]
    }
  },
  "include": ["src/components", "src/index.ts", "src"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
